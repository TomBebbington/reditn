<!-- Default widgets settings -->
<Defaults>
	<Floating>
		<Default widthPt="100" heightPt="100" skin:Gradient-colors="[0x000000, 0x161616, 0x000000]" skin:Gradient-rotation="Math.random()*Math.PI"/>
	</Floating>
	<Button>
		<Default w="700" h="120" skin:Paint-color="0x00FF00" skin:Paint-alpha="0.5" skin:Paint-corners="[80, 120]" skin:Paint-border="16" skin:Paint-borderColor="0x00FF00" format-size="14" format-color="0xff0000" format-bold="true" />
